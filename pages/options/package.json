{
  "name": "@bpmn-diff-viewer-extension/options",
  "version": "0.0.1",
  "description": "bpmn diff viewer extension options",
  "private": true,
  "sideEffects": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf ./dist && rimraf .turbo",
    "build": "pnpm run clean && tsc --noEmit && vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "dev": "pnpm build:watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@bpmn-diff-viewer-extension/shared": "workspace:*",
    "@bpmn-diff-viewer-extension/storage": "workspace:*",
    "@primer/react": "^36.20.0",
    "@radix-ui/themes": "^3.0.5"
  },
  "devDependencies": {
    "@bpmn-diff-viewer-extension/hmr": "workspace:*",
    "@bpmn-diff-viewer-extension/tailwindcss-config": "workspace:*",
    "@bpmn-diff-viewer-extension/tsconfig": "workspace:*"
  }
}
